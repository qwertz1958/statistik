<!-- Formular -->
<div class="col-md-6">
    <form action="{{basisUrl}}/buchTitelSuche" method="POST">
        <div class="form-group">
            <label>Buchtitel : </label>
            <input type="text" class="form-control" name="titel" id="titel" placeholder="Titel des Buches eintragen" >
        </div>
        <button type="submit" class="btn btn-primary">Buchsuche</button>
    </form>
</div>
<!-- Bloecke -->
<div class="col-md-6">

    <!-- nicht gefunden -->
    {% if block1 %}
    <div class="col-md-12">
        Buch nicht gefunden
    </div>
    {% endif %}

    <!-- gefunden -->
    {% if block2 %}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>ISBN</th>
                    <th>Titel</th>
                    <th>Anzahl vorr√§tig</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articleData %}
                <tr>
                    <td>{{article.ISBN}}</td>
                    <td>{{article.title}}</td>
                    <td>{{article.anzahl}}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
</div>
