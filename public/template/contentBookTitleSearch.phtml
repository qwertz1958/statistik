<!-- Formular -->
<div class="col-md-6">
    <form action="{$basisUrl}/buchTitelSuche" method="POST">
        <div class="form-group">
            <label>Buchtitel : </label>
            <input type="text" class="form-control" name="titel" id="titel" placeholder="Titel des Buches eintragen" >
        </div>
        <button type="submit" class="btn btn-primary">Buchsuche</button>
    </form>
</div>
<!-- Bloecke -->
