    <!-- nicht gefunden -->
    {block1 $block1}
    <div class="col-md-12">
        Buch nicht gefunden
    </div>
    {/block1 $block1}

    <!-- gefunden -->
    {block2 $block2}
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>ISBN</th>
                    <th>Titel</th>
                    <th>Anzahl vorr√§tig</th>
                </tr>
                </thead>
                <tbody>
                {foreach $articleData as $key => $value}
                <tr>
                    <td>{$value['ISBN']}</td>
                    <td>{$value['title']}</td>
                    <td>{$value['anzahl']}</td>
                </tr>
                {/foreach}
                </tbody>
            </table>
        </div>
    </div>
    {/block2 $block2}
</div>